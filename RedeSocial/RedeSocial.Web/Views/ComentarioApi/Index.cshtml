@model IEnumerable<RedeSocial.Domain.Account.Comentario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.accountName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.comentario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.accountName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.comentarioId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.comentarioId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.comentarioId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
